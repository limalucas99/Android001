<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_weight="0"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Street fighter"
        android:textColor="#110C0C"
        android:textColorHighlight="#ABE20E0E"
        android:textSize="@dimen/font_smartphones" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/tamanho_imagem_smartphones"
        android:layout_height="0"
        android:layout_weight="2"
        app:srcCompat="@drawable/alemanha" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/alemanha"
        android:textColor="#8F8F1F"
        android:textSize="@dimen/font_smartphones" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/tamanho_imagem_smartphones"
        android:layout_height="0"
        android:layout_weight="2"
        app:srcCompat="@drawable/ps_alemanha_juli" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/juli"
        android:textColor="#72192CD3"
        android:textSize="@dimen/font_smartphones" />


</LinearLayout>