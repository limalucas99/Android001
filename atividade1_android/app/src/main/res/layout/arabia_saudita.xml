<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_weight="0"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0"
        android:layout_weight="1"
        android:text="Street fighter"
        android:textColor="#2D643B"
        android:textColorHighlight="#ABE20E0E"
        android:textSize="@dimen/font_smartphones" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/tamanho_imagem_smartphones"
        android:layout_height="0"
        android:layout_weight="2"
        app:srcCompat="@drawable/arabia_saudita" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0"
        android:layout_weight="1"
        android:text="@string/ar_bia_saudita"
        android:textColor="#2E7D32"
        android:textSize="@dimen/font_smartphones" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/tamanho_imagem_smartphones"
        android:layout_height="0"
        android:layout_weight="2"
        app:srcCompat="@drawable/ps_arabia_Rashid" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0"
        android:layout_weight="1"
        android:text="@string/rashid"
        android:textColor="#2B2B7E"
        android:textSize="@dimen/font_smartphones" />


</LinearLayout>